<Window x:Class="kanbanVS.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Añadir Nueva Tarea" Height="550" Width="350" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Estilo base para los botones, similar al diseño limpio de la MainWindow -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsDefault" Value="True">
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#2980B9"/>
                                <Setter TargetName="ButtonBorder" Property="BorderThickness" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo específico para el botón Cancelar -->
        <Style TargetType="Button" x:Key="CancelButtonStyle" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#ECF0F1"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#D0D3D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Nuevo estilo implícito para TextBox con CornerRadius (bordes redondeados) -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#AAAAAA" TargetName="Border"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3498DB" TargetName="Border"/>
                                <Setter Property="BorderThickness" Value="2" TargetName="Border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <!-- Primera parella -->
            <TextBlock Margin="0,0,0,5"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Foreground="#333333"
                   Text="Nom Tasca:" />

            <TextBox x:Name="TaskTextBox"
                 Height="30"
                 Margin="0,0,0,15"/>

            <!-- Segona parella -->
            <TextBlock Margin="0,0,0,5"
                   FontWeight="SemiBold"
                   FontSize="14"
                   Foreground="#333333"
                   Text="Descripción:" />

            <TextBox x:Name="DescriptionTextBox"
                 Height="30"
                 Margin="0,0,0,15"/>

            <TextBlock Margin="0,0,0,5"
                FontWeight="SemiBold"
                FontSize="14"
                Foreground="#333333"
                Text="Responsable:" />

            <TextBox x:Name="ResponsableTextBox"
                Height="30"
                Margin="0,0,0,15"/>

            <TextBlock Margin="0,0,0,5"
                FontWeight="SemiBold"
                FontSize="14"
                Foreground="#333333"
                Text="Prioritat:" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">

                <RadioButton x:Name="PrioritatAlta"
                 Margin="0,0,20,0"
                 Content="Alta"/>

                <RadioButton x:Name="PrioritatMitja"
                 Margin="0,0,20,0"
                 Content="Mitjana"/>

                <RadioButton x:Name="PrioritatBaixa"
                 Content="Baixa"/>

            </StackPanel>

            <TextBlock Margin="0,0,0,5"
                FontWeight="SemiBold"
                FontSize="14"
                Foreground="#333333"
                Text="Data límit:" />

            <DatePicker x:Name="DataLimitDatePicker"
                    Height="30"
                    Margin="0,0,0,15"/>

        </StackPanel>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom">

            <Button Content="Aceptar" 
                    Click="AcceptButton_Click" 
                    Width="80" 
                    IsDefault="True" 
                    Margin="0,0,10,0"/>

            <Button Content="Cancelar" 
                    Click="CancelButton_Click" 
                    Width="80" 
                    IsCancel="True"
                    Style="{StaticResource CancelButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>