<Window x:Class="kanbanVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kanbanVS"
        mc:Ignorable="d"
        Title="Kanban Board" Height="600" Width="1000"
        Background="#F5F5F5">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Margin" Value="10,0,10,0"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#CCCCCC" Direction="270" ShadowDepth="1" BlurRadius="5" Opacity="0.6"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TextBlock" x:Key="HeaderStyle">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="#333333"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
        </Grid.Resources>

        <!-- TO DO COLUMN -->
        <Border Grid.Row="1" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="To Do" Style="{StaticResource HeaderStyle}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding ToDoTasks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="TaskBorder"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1.5"
                                        CornerRadius="6"
                                        Padding="10"
                                        Margin="0,5"
                                        Background="White"
                                        MouseLeftButtonUp="TaskBorderClick"
                                        Tag="{Binding}"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Vertical">
                                        <!-- Primera fila: prioridad + texto -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="12" Height="12" Fill="{Binding PriorityColor}" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Text}" FontWeight="SemiBold" Foreground="#333333" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!-- Segunda fila: responsable y fechas -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding AssignedTo}" Foreground="#555555"/>
                                            <TextBlock Text=" • " Foreground="#999999" Margin="5,0"/>
                                            <TextBlock Text="{Binding StartDate, StringFormat='Inicio: {0:d}'}" Foreground="#555555" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding EndDate, StringFormat='Fin: {0:d}'}" Foreground="#555555"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- IN PROGRESS COLUMN -->
        <Border Grid.Row="1" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="In Progress" Style="{StaticResource HeaderStyle}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding InProgressTasks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="TaskBorder"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1.5"
                                        CornerRadius="6"
                                        Padding="10"
                                        Margin="0,5"
                                        Background="White"
                                        MouseLeftButtonUp="TaskBorderClick"
                                        Tag="{Binding}"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Vertical">
                                        <!-- Primera fila: prioridad + texto -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="12" Height="12" Fill="{Binding PriorityColor}" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Text}" FontWeight="SemiBold" Foreground="#333333" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!-- Segunda fila: responsable y fechas -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding AssignedTo}" Foreground="#555555"/>
                                            <TextBlock Text=" • " Foreground="#999999" Margin="5,0"/>
                                            <TextBlock Text="{Binding StartDate, StringFormat='Inicio: {0:d}'}" Foreground="#555555" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding EndDate, StringFormat='Fin: {0:d}'}" Foreground="#555555"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- DONE COLUMN -->
        <Border Grid.Row="1" Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Done" Style="{StaticResource HeaderStyle}"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding DoneTasks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border x:Name="TaskBorder"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1.5"
                                        CornerRadius="6"
                                        Padding="10"
                                        Margin="0,5"
                                        Background="White"
                                        MouseLeftButtonUp="TaskBorderClick"
                                        Tag="{Binding}"
                                        HorizontalAlignment="Stretch">
                                    <StackPanel Orientation="Vertical">
                                        <!-- Primera fila: prioridad + texto -->
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="12" Height="12" Fill="{Binding PriorityColor}" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding Text}" FontWeight="SemiBold" Foreground="#333333" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <!-- Segunda fila: responsable y fechas -->
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding AssignedTo}" Foreground="#555555"/>
                                            <TextBlock Text=" • " Foreground="#999999" Margin="5,0"/>
                                            <TextBlock Text="{Binding StartDate, StringFormat='Inicio: {0:d}'}" Foreground="#555555" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding EndDate, StringFormat='Fin: {0:d}'}" Foreground="#555555"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- HEADER BUTTONS -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Button Width="30" HorizontalAlignment="Right">
                <TextBlock FontSize="15">📝</TextBlock>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Width="30" HorizontalAlignment="Left" Click="Button_Click">
                <TextBlock FontSize="15">📝</TextBlock>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Window>
